<?xml version="1.0" encoding="UTF-8"?>
<serviceGroup>

	<service name="FactsheetService">

		<messageReceivers>
			<messageReceiver mep="http://www.w3.org/ns/wsdl/in-out"
				class="org.fao.fi.web.factsheet.FactsheetServiceMessageReceiverInOut" />
		</messageReceivers>

		<!--  Spring integration -->
		<parameter name="SpringBeanName">factsheetWebService</parameter>
		<parameter name="ServiceObjectSupplier">
			org.apache.axis2.extensions.spring.receivers.SpringServletContextObjectSupplier
		</parameter>
		<parameter name="enableSwA" locked="false">true</parameter>

		<!--
			cacheAttachments means caching on the file system. Is set to false because yet not proven to be
			needed. If set to true, also define parameter attachmentDIR
		-->
		<parameter name="cacheAttachments" locked="false">false</parameter>
		<parameter name="sizeThreshold" locked="false">4000</parameter>

		<parameter name="modifyUserWSDLPortAddress">true</parameter>
		<parameter name="useOriginalwsdl">false</parameter>
		<parameter name="modifyUserWSDLPortAddress">true</parameter>
		<parameter name="enableREST" locked="false">true</parameter>



		<operation name="RetrievePublishedFactsheetList" mep="http://www.w3.org/ns/wsdl/in-out"
			namespace="http://www.fao.org/fi/figis/webservice">
			<actionMapping>http://www.fao.org/fi/figis/webservice/RetrievePublishedFactsheetList
			</actionMapping>
			<outputActionMapping>http://www.fao.org/fi/figis/webservice/FactsheetPortType/RetrievePublishedFactsheetListResponse
			</outputActionMapping>
		</operation>
		<operation name="RetrievePublishedFactsheet" mep="http://www.w3.org/ns/wsdl/in-out"
			namespace="http://www.fao.org/fi/figis/webservice">
			<actionMapping>http://www.fao.org/fi/figis/webservice/RetrievePublishedFactsheet</actionMapping>
			<outputActionMapping>http://www.fao.org/fi/figis/webservice/FactsheetPortType/RetrievePublishedFactsheetResponse
			</outputActionMapping>
		</operation>
	</service>

</serviceGroup>


